<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFECDB"
    tools:context=".fragment.update.UpdatedTodoActivity">

    <ImageView
        android:id="@+id/imageOne"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="0dp"
        android:background="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Do List"
        android:textStyle="bold"
        android:padding="20dp"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:layout_margin="22dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:elevation="50dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent=".21"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUpdate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="25sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/LinearCard">
            <TextView
                android:id="@+id/textEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Task"
                android:textSize="20dp"
                android:layout_marginTop="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal"
                android:padding="11dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:padding="25sp"
                android:id="@+id/titleInput"
                app:layout_constraintTop_toBottomOf="@id/add_new_todo">
                <EditText
                    android:id="@+id/titleEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:hint="This is title"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:padding="25sp"
                android:id="@+id/descriptionInput"
                app:layout_constraintTop_toBottomOf="@id/add_new_todo">
                <EditText
                    android:id="@+id/detailsEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Task details"
                    android:layout_marginHorizontal="7dp"
                    android:textColorHint="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select time"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="start"
                android:layout_margin="25sp"/>
            <TextView
                android:id="@+id/dataID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Select time"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center_horizontal"/>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_button_update"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>